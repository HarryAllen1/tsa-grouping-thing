rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    let isAdmin = get(/databases/$(database)/documents/users/$(request.auth.token.email)).data.admin;
  	match /users/{user} {
      allow read: if request.auth != null;
      allow write: if
        request.auth != null &&
        (
          user == request.auth.token.email ||
          isAdmin
        );
      allow delete: if isAdmin;
    }
    match /events/{event} {
      allow read: if request.auth != null;
      allow write: if 
        request.auth != null &&
        isAdmin;
    }
    match /mail/{email} {
      // should only be written through request functions
    	allow read, write: if false;
    }
    match /settings/{setting} {
    	allow read: if request.auth != null;
      allow write: if
        request.auth != null &&
        isAdmin;
    }
    match /{document=**} {
      allow read, write: if request.auth != null;
    }
  }
}
